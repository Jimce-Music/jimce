{
  "openapi": "3.1.1",
  "info": {
    "title": "Jimce API",
    "version": "0.0.0-dev"
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "JWT Bearer token sent as Authorization: Bearer <token>"
      }
    },
    "schemas": {
      "400-bad-request-response": {
        "description": "A response sent by the server when your request is malformed (Code 400)",
        "type": "object",
        "properties": {
          "statusCode": {
            "type": "number",
            "const": 400
          },
          "code": {
            "description": "Internal code describing the error",
            "examples": [
              "FST_ERR_VALIDATION"
            ],
            "type": "string"
          },
          "error": {
            "type": "string",
            "const": "Bad Request"
          },
          "message": {
            "description": "Error message describing what went wrong",
            "type": "string"
          }
        },
        "required": [
          "statusCode",
          "code",
          "error",
          "message"
        ],
        "additionalProperties": false
      }
    }
  },
  "paths": {
    "/api/admin/users/list-users": {
      "get": {
        "summary": "Lists all users",
        "description": "Returns id, username, email and isAdmin for every registered user\n                \n                **Requires admin privileges** \n                ",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "description": "The uuid of the user",
                        "examples": [
                          "5b9e340c-38ba-4495-b895-c3aee230134e"
                        ],
                        "type": "string"
                      },
                      "username": {
                        "type": "string"
                      },
                      "email": {
                        "description": "If existent, the email of the user",
                        "examples": [
                          null,
                          "user@example.com"
                        ],
                        "anyOf": [
                          {
                            "type": "string"
                          },
                          {
                            "type": "null"
                          }
                        ]
                      },
                      "isAdmin": {
                        "description": "Defines whether the user has admin privileges",
                        "examples": [
                          false
                        ],
                        "type": "boolean"
                      }
                    },
                    "required": [
                      "id",
                      "username",
                      "email",
                      "isAdmin"
                    ],
                    "additionalProperties": false
                  }
                }
              }
            }
          },
          "400": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/400-bad-request-response"
                }
              }
            }
          }
        }
      }
    },
    "/generate-token": {
      "post": {
        "responses": {
          "200": {
            "description": "Default Response"
          }
        }
      }
    },
    "/test-jwt": {
      "get": {
        "responses": {
          "200": {
            "description": "Default Response"
          }
        }
      }
    }
  }
}
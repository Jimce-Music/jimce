    "/api/me/userinfo": {
      "get": {
        "summary": "Returns info about the current user",
        "description": "This route can be used to retrieve detailed information about the user associated with current JWT, like username, id, etc.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "description": "The uuid of the user"
                    },
                    "username": {
                      "type": "string"
                    },
                    "email": {
                      "anyOf": [
                        {
                          "type": "string"
